FROM php:7.2-cli-buster

ARG MAGENTO_PATH

RUN usermod -u 1000 www-data \
    && apt-get update && apt-get install -y \
    apt-utils \
    sudo \
    wget \
    unzip \
    curl \
    libmcrypt-dev \
    libicu-dev \
    libxml2-dev libxslt1-dev \
    libfreetype6-dev \
    libjpeg62-turbo-dev \
    libpng-dev \
    git \
    nano \
    mc \
    default-mysql-client \
    gnupg2 \
    && docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ \
    && docker-php-ext-configure hash --with-mhash \
    && docker-php-ext-install -j$(nproc) intl xsl gd zip pdo_mysql opcache soap bcmath json iconv \
    && curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer \
    && pecl install xdebug \
    && mkdir -p /var/www/.composer/cache/repo \
    && chown www-data:www-data -R /var/www/.composer \
    && apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
COPY ./auth.json /var/www/.composer/auth.json
COPY ./zphp.ini /usr/local/etc/php/conf.d/zphp.ini

USER www-data
WORKDIR ${MAGENTO_PATH}
